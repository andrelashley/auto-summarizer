{
    "name": "auto-summarizer",
    "displayName": "Auto Summarizer",
    "description": "Automatically generates a summary of a block of English text.",
    "version": "0.0.1",
    "publisher": "alashley",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.autoSummarize"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [{
          "command": "extension.autoSummarize",
          "title": "Summarize English Text"
        }],
        "keybindings": [{
            "command": "extension.autoSummarize",
            "key": "shift+alt+s",
            "mac": "shift+option+s",
            "when": "editorTextFocus"
        }]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}